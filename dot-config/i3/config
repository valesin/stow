  }
  status_command ~/.config/i3status/my_i3status.sh
}

# Press $mod+Shift+p followed to enter pomodoro
set $mode_launcher Pomodoro [s]tart [n]ext [x]close [e]xit
bindsym $mod+Shift+p mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym s exec ~/Documents/Scripts/pomo/pomo --start && $refresh_i3status
    bindsym n exec ~/Documents/Scripts/pomo/pomo --next && $refresh_i3status
    bindsym x exec ~/Documents/Scripts/pomo/pomo --close && $refresh_i3status
    bindsym e exec ~/Documents/Scripts/pomo/pomo --exit && $refresh_i3status

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
